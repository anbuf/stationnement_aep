body {
	background-image: url(../images/stripe.png);
	color:#333;
	font-family:"Open Sans", sans-serif;
	font-size:15px;
	line-height:1.62em;
	overflow: hidden;
	box-sizing: border-box;
	
   overflow-y: scroll;

}

#adminLeftSideWrapper,
#adminRightSideWrapper,
#proofSectionWrapper,
#statusSectionWrapper,
#wrapper {
	background-color: #f8f8f8;
	position: relative;
	max-width: 1140px;
	margin: 0px auto 20px auto;
	overflow: hidden;
	border-top-left-radius: 15px;
	border-top-right-radius: 15px;
	border-bottom-left-radius: 15px;
	border-bottom-right-radius: 15px;
	box-shadow:0 0 18px rgba(0, 0, 0, .4);
}

#adminDemandWrapper,
#adminGridWrapper{
	max-width: none;
	min-width: 900px;
	margin: 0px 25px 25px 25px;
}

#adminDemandWrapper{
height:315px;
}

#adminGridWrapper{
	height:100%;
	max-height: 550px;
	min-width:1210px;
}

#proofSectionWrapper,
#statusSectionWrapper{
	margin-top:0px;
	padding:10px;
	height:100%;
}

#statusSectionWrapper{
	float:left;
	margin-right: 8px;
	width:33.3%;
	
}

#proofSectionWrapper{
 display:block;
}

#adminLeftSideWrapper,
#adminRightSideWrapper{
	height: 100%;
	
}

#adminLeftSideWrapper
{
	overflow-x: auto;
	display: inline;
	min-width: 10px;
	width: 70%;
	max-width: 70%;
	float: left;
	margin-right: 8px;
	height: 100%;
}



#adminRightSideWrapper{
	width: 29.3%;
	float: left;
	min-width: 355px;
	
}

#rightSideContainer,
#adminLeftSideContainer{
	padding:10px;
	height: 100%;	
}

#demandVerificationImageContainer{
	width:50%;
	float:left;
	text-align: center;
}

#demandVerificationInfoContainer{
	float:left;
	margin-left:15px;
	width:45%;
}

.demandVerificationImageFrame{
	margin-left:auto;
	margin-left:auto;
	padding:6px;
	background: #B6B6B4;
	border-radius: 5px 5px 5px 5px;
	cursor: pointer;
}

#proofTabs{	
	width:100%;
	height: 100%; 
	padding: 0px;
}

.demandVerificationImage{
	max-width:100%;
	max-height:90%;
}

#imageOverlayContainer{
	width:50%; 
	height:94%; 
	background-color:rgba(34, 34, 34, 0.95); 
	border-top-left-radius: 15px;
	border-top-right-radius: 15px;
	border-bottom-left-radius: 15px;
	border-bottom-right-radius: 15px; 
	position:fixed; 
	left:1%;
	top:1%;
	padding:15px;
 	text-align: center;
    vertical-align: middle;
}

#imageZoomOverlayContainer{
	width:43%; 
	height:45%; 
	left:54%;
	top:50%;
	padding:15px;
	position:fixed; 
}

#imageOverlay{
	max-width:100%;
	max-height:100%;
}



.infoFieldTitleWithBar,
.infoFieldTitle{
	font-size:17px;
	display: block;	
}

.bottomBorderedElement,
.infoFieldTitleWithBar
{
	border-bottom-style:solid;
	border-bottom-width:1px;
	border-bottom-color:gray;

}


.infoFieldValue{
	margin-bottom:4px;
	display: block;	
}

#googleMap{
	max-width: 100%;
	max-height: 100%;	
}

.hidden {
    -moz-opacity: 0;
    opacity: 0;
    
     -webkit-transition: all 300ms linear;
    -moz-transition: all 300ms linear;
    -ms-transition: all 300ms linear;
    -o-transition: all 300ms linear;
    transition: all 300ms linear;
    /*
    -moz-transform: scale(0.01);
    -webkit-transform: scale(0.01);
    -o-transform: scale(0.01);
    -ms-transform: scale(0.01);
    transform: scale(0.01);
    */
}

.statusFilterButton
{
	display:inline;
	margin: 0px 2px 0px 0px;
}

a.selectedStatusFilterButtonLinks,
a.statusFilterButtonLinks
{
	color:  #666362;
	padding: 10px 15px 10px 15px;
	background-color: #D1D0CE;
	cursor:pointer;
}

a.selectedStatusFilterButtonLinks
{
	background-color: #98AFC7;
}

a.statusFilterButtonLinks:hover
{
	background-color: #B6B6B4;	
}
